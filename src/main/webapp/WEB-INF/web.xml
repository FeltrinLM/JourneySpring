<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <!-- Login Servlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.Journey.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Usuario Servlet (Cadastro) -->
  <servlet>
    <servlet-name>UsuarioServlet</servlet-name>
    <servlet-class>com.Journey.controller.UsuarioServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UsuarioServlet</servlet-name>
    <url-pattern>/usuario</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>NovaPecaServlet</servlet-name>
    <servlet-class>com.Journey.controller.NovaPecaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NovaPecaServlet</servlet-name>
    <url-pattern>/nova-peca</url-pattern>
  </servlet-mapping>


  <!-- Visualização Geral -->
  <servlet>
    <servlet-name>VisualizacaoGeralServlet</servlet-name>
    <servlet-class>com.Journey.controller.VisualizacaoGeralServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VisualizacaoGeralServlet</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>

  <!-- Editar Estampa -->
  <servlet>
    <servlet-name>EditarEstampaServlet</servlet-name>
    <servlet-class>com.Journey.controller.EditarEstampaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditarEstampaServlet</servlet-name>
    <url-pattern>/editar-estampa</url-pattern>
  </servlet-mapping>

  <!-- Editar Peca -->
  <servlet>
    <servlet-name>EditarPecaServlet</servlet-name>
    <servlet-class>com.Journey.controller.EditarPecaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditarPecaServlet</servlet-name>
    <url-pattern>/editar-peca</url-pattern>
  </servlet-mapping>

  <!-- Editar Colecao -->
  <servlet>
    <servlet-name>EditarColecaoServlet</servlet-name>
    <servlet-class>com.Journey.controller.EditarColecaoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditarColecaoServlet</servlet-name>
    <url-pattern>/editar-colecao</url-pattern>
  </servlet-mapping>

</web-app>
